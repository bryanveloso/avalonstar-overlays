<% wrap_layout :overlay do %>
<div class="overlay-bumper">
  <h1 class="game-title"><%= current_page.data.game %></h1>
  <p class="byline">On <strong>Avalonstar</strong></p>
</div>
<div class="social-bumper">
  <ul class="social-links">
    <li class="social-link twitter"><span class="ss-icon ss-twitter"></span> twitter.com/<strong>bryanveloso</strong></li>
    <li class="social-link facebook"><span class="ss-icon ss-facebook"></span> facebook.com/<strong>bryanveloso</strong></li>
    <li class="social-link youtube"><span class="ss-icon ss-youtube"></span> youtube.com/<strong>bryanveloso</strong></li>
  </ul>
</div>
<div class="bumper-background">
  <div class="bumper-background-image"
       cross-origin="anonymous"
       data-adaptive-background="1"
       data-ab-css-background="1"
       style="background-image: url('<%= current_page.data.image %>')">
  </div>
</div>
<% end %>
